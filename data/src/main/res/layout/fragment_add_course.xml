<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentaition.ui.fragments.courses.AddCourseFragment">


    <EditText
        android:id="@+id/edit_name_course_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:inputType="text"
        android:layout_weight="1"
        android:textSize="32sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:hint="@string/type_course_name"
        android:text="" />

    <EditText
        android:id="@+id/edit_intro_course_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="@string/type_course_intro"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_weight="4"
        android:inputType="text"
        android:text="" />

    <EditText
        android:id="@+id/edit_description_course_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:layout_weight="8"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:hint="@string/type_course_description"
        android:inputType="text"
        android:text="" />


    <Button
        android:id="@+id/add_course_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="32sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/add_course_button"/>

</LinearLayout>