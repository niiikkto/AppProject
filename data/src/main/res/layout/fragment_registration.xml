<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".presentaition.ui.fragments.registration.RegistrationFragment">

    <TextView
    android:id="@+id/text_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/purple"
    android:textColor="@color/white"
    android:layout_weight="2"
    android:textSize="48sp"
    android:text="@string/my_registration" />

    <EditText
        android:id="@+id/edit_username_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:textColorHint="@color/white"
        android:hint="@string/type_username"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:layout_margin="16dp"
          />

    <EditText
        android:id="@+id/edit_password_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:hint="@string/type_password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:textSize="18sp"  />

    <EditText
        android:id="@+id/edit_phone_number_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:textColorHint="@color/white"
        android:hint="@string/type_phone_number"
        android:importantForAutofill="no"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:inputType="number"
        android:layout_margin="16dp"
        android:textSize="18sp"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/edit_age_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:hint="@string/type_age"
        android:importantForAutofill="no"
        android:textColorHint="@color/white"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:inputType="number"
        android:layout_margin="16dp"
        android:textSize="18sp" />

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/profile_btn_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:textColorHint="@color/white"
        android:background="@color/purple"
        android:gravity="center"
        android:textSize="48sp"
        android:layout_margin="16dp"
        android:text="@string/press_me" />



</LinearLayout>